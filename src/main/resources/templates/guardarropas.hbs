                <a href="/prendas/{{idGuardarropas}}" name="button" class=" btn btn-edit"><i class="fas fa-user-edit"></i></a>
                </td>
                <td>
                <a href="/sugerencia/{{idGuardarropas}}/{{usuario.idUsuario}}" name="button" class=" btn btn-edit"><i class="fas fa-user-edit"></i></a>
                </td>

            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
</body>


